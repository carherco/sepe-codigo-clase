{% extends 'base.html.twig' %}

{% block title %}Hello CatalogoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {{ include('menu.html.twig', {selected: 1}) }}

    <h1>Lista de libros</h1>

    <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
          </tr>
        </thead>
          
        <tbody>
          {% for fondo in fondos %}
          <tr> 
            <td>{{ loop.index }}</td>
            <td>{{ fondo.titulo }}</td>
            <td>
            {{fondo.autores[0].nombre}} 

            {% if fondo.autores|length > 1 %}
              <p>{{fondo.autores[1].nombre}}</p> 
            {% endif %}
            </td>

            

            <td>{{fondo.editorial.nombre}} 
          </tr>
          {% endfor %}
        </tbody>

    </table>
</div>
{% endblock %}
